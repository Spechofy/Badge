<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

    <!-- Longueur maximale des lignes (doit être au niveau Checker, pas TreeWalker) -->
    <module name="LineLength">
        <property name="max" value="100"/>
    </module>

    <module name="TreeWalker">
        <!-- Exige des final pour les paramètres -->
        <module name="FinalParameters" />

        <!-- Vérifie la présence de Javadoc sur les classes -->
        <module name="JavadocType" />

        <!-- Vérifie la présence de Javadoc sur les méthodes publiques -->
        <module name="JavadocMethod" />

        <!-- Vérifie la présence de Javadoc sur les champs -->
        <module name="JavadocVariable" />

        <!-- Vérifie les espaces autour des accolades et opérateurs -->
        <module name="WhitespaceAround" />
    </module>
</module>
